
#Wiki for a complete reference! : https://i3wm.org/docs/userguide.html

set $mod Mod4

#System font: Windows' title, Status bar, ... (Not Terminal font)
font pango:Noto Sans Mono 12

# I3-WM FR
#https://wiki.archlinux.org/index.php/XDG_Autostart
exec --no-startup-id dex --autostart --environment i3

#i3status
bar {
    status_command i3status -c ~/.config/i3/status

    position bottom
    colors {
        # bar background color
        background $bg
        # text color used for blocks that do not have a color specified.
        statusline $lightgray
        # workspaces section            
        #                    border  backgr. text
        focused_workspace    $lightgray $lightgray $bg
        inactive_workspace   $darkgray $darkgray $lightgray
        active_workspace     $darkgray $darkgray $lightgray
        urgent_workspace     $red $red $bg
    }
}
#color schemes
set $bg #282828
set $white #dbdbdb
set $red #cc241d
set $green #98971a
set $yellow #d79921
set $blue #458588
set $purple #b16286
set $aqua #689d68
set $gray #a89984
set $darkgray #1d2021
set $lightgray #bdae93
#class                 border|backgr|text|indicator|child_border
client.focused          $lightgray $lightgray $bg $purple $darkgray
client.focused_inactive $darkgray $darkgray $lightgray $purple $darkgray
client.unfocused        $darkgray $darkgray $lightgray $purple $darkgray
client.urgent           $red $red $white $red $red

# PERSONAL


set $term alacritty
set $files yazi

set $browser firefox
set $notes obsidian

assign [class=$browser] $ws1
assign [class="$notes"] $ws3


#input_method - ime
exec --no-startup-id fcitx5
#screen_capture - shooter
bindsym $mod+Shift+s exec xfce4-screenshooter -fc 
#clipboard_manager - clipman
exec --no-startup-id xfce4-clipman
bindsym $mod+v exec xfce4-clipman-history
#wallpaper - feh
exec_always --no-startup-id feh --bg-fill ~/git/dots/pics/fam/2010_ong_chau_minh.jpg
#application_menu - dmenu
bindsym $mod+space exec dmenu_run -fn "Noto Sans Mono-12"



# SYSTEMD

#restart_i3
bindsym $mod+Shift+r restart
#exit_i3
bindsym $mod+Shift+x exec i3-msg exit
#kill_instance
bindsym $mod+q kill

#hhkb_layout_laptop
exec_always --no-startup-id /usr/bin/setxkbmap -option "ctrl:swapcaps"
exec_always --no-startup-id /usr/bin/setxkbmap -option "altwin:swap_alt_win"
exec_always --no-startup-id xset r rate 250 25

#terminal
bindsym $mod+r exec $term
#file_manager - yazi
bindsym $mod+e exec $term -e $files

#screen_orientations - xrandr
bindsym $mod+Ctrl+Shift+Left exec xrandr -o 1
bindsym $mod+Ctrl+Shift+Down exec xrandr -o 2
bindsym $mod+Ctrl+Shift+Up exec xrandr -o 0
bindsym $mod+Ctrl+Shift+Right exec xrandr -o 3

#outer_margins
gaps outer 1
#inner_paddings
gaps inner 3

#few_adjustments - xinput
  #m575
exec_always --no-startup-id xinput --set-prop "Logitech ERGO M575S" "libinput Accel Speed" -0.6
  #m570
exec_always --no-startup-id xinput --set-prop "Logitech M570" "libinput Accel Speed" -1

#brightness - brightnessctl
bindsym XF86MonBrightnessUp exec brightnessctl set +10%
bindsym XF86MonBrightnessDown exec brightnessctl set 10%-
#audio - pulseaudio
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && $refresh_i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && $refresh_i3status
#same_but_another_way
bindsym $mod+Down exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && $refresh_i3status
bindsym $mod+Up exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && $refresh_i3status
bindsym $mod+Right exec brightnessctl set +10%
bindsym $mod+Left exec brightnessctl set 10%-

#windows_layout (stacked | tabbed | toggle | splith | splitv)
bindsym $mod+d layout toggle tabbed splith splitv
#layout mode at boot
workspace_layout tabbed

#change_focusing (alt+tab)
bindsym $mod+Ctrl+Left focus left
bindsym $mod+Ctrl+Down focus down
bindsym $mod+Ctrl+Up focus up
bindsym $mod+Ctrl+Right focus right
#reposition_focused_window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

#workspaces_definition
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "0"
#workspaces_switching
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10
#transposition_window_to_workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

#resize_window
bindsym $mod+Ctrl+Shift+r mode "resize"
mode "resize" {
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
