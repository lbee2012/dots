
#Wiki for a complete reference! : https://i3wm.org/docs/userguide.html

set $mod Mod1

#System font: Windows' title, Status bar, ... (Not Terminal font)
font pango:Jetbrains Mono 14

#i3-wm fr
#https://wiki.archlinux.org/index.php/XDG_Autostart
exec --no-startup-id dex --autostart --environment i3

#i3status
bar {
    status_command i3status -c ~/.config/i3/i3status

    position bottom
    colors {
        # bar background color
        background $bg
        # text color used for blocks that do not have a color specified.
        statusline $lightgray
        # workspaces section            
        #                    border  backgr. text
        focused_workspace    $lightgray $lightgray $bg
        inactive_workspace   $darkgray $darkgray $lightgray
        active_workspace     $darkgray $darkgray $lightgray
        urgent_workspace     $red $red $bg
    }
}

#color schemes
set $bg #282828
set $white #dbdbdb
set $red #cc241d
set $green #98971a
set $yellow #d79921
set $blue #458588
set $purple #b16286
set $aqua #689d68
set $gray #a89984
set $darkgray #1d2021
set $lightgray #bdae93

#class                 border|backgr|text|indicator|child_border
client.focused          $lightgray $lightgray $bg $purple $darkgray
client.focused_inactive $darkgray $darkgray $lightgray $purple $darkgray
client.unfocused        $darkgray $darkgray $lightgray $purple $darkgray
client.urgent           $red $red $white $red $red

#restart i3
bindsym $mod+Shift+r restart
#exit i3
bindsym $mod+Shift+x exec pkill i3

#PERSONAL
	#picom
exec --no-startup-id picom --config ~/.config/picom/picom.conf

	#keyboard - fcitx5
exec --no-startup-id fcitx5
#exec --no-startup-id ibus-daemon -rxRd
	#screen_capture - flameshot
bindsym $mod+Shift+s exec flameshot gui 
	#clipboard_manager - clipmenud
exec --no-startup-id clipmenud
bindsym $mod+v exec clipmenu
	#hhkb_layout_laptop
exec --no-startup-id /usr/bin/setxkbmap -option "ctrl:nocaps"
	
	#wallpaper - feh
exec --no-startup-id feh --bg-fill /home/sata/Git/dotfs/pics/2010_ong_chau_minh.jpg

  #application_menu - dmenu
bindsym $mod+space exec dmenu_run -fn "Jetbrains Mono-14"

	#terminal - kitty
#bindsym $mod+r exec kitty
bindsym $mod+r exec kitty
	#file_manager - yazi
#bindsym $mod+e exec kitty -e yazi
bindsym $mod+e exec kitty -e yazi
	#super_shortcuts
bindsym mod4+1 exec kitty -e yazi
bindsym mod4+2 exec firefox-developer-edition
bindsym mod4+3 exec obsidian
bindsym mod4+4 exec kitty
bindsym mod4+5 exec code-insiders

	#kill_instance
bindsym $mod+q kill

	#shell_startup_at_boot
  #browser
exec --no-startup-id firefox-developer-edition
assign [class="firefox-developer-edition"] $ws1
  #notes
exec --no-startup-id obsidian
assign [class="obsidian"] $ws3
  #vesktop
exec --no-startup-id vesktop
